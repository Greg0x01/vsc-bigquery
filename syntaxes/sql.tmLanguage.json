{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BigQuery",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#query_statement"
		}
	],
	"repository": {
		"query_statement": {
			"patterns": [
				{
					"include": "#query_expr"
				}
			],
			"name": "statement.query.sql"
		},
		"query_expr": {
			"patterns": [
				{
					"include": "#select"
				}
			],
			"name": "expression.query.sql"
		},
		"select": {
			"patterns": [
				{
					"begin": "(?i:(?<=\\b)(select)(?=\\b))",
					"beginCaptures": {
						"1": {
							"name": "keyword.other.sql"
						}
					},
					"patterns": [
						{
							"include": "#select_item_list"

						}
					],
					"end": "(?i:(?<=(\\b(from|where|group by|order by)\\b)))",
					"endCaptures": {
						"1": {
							"name": "keyword.other.sql"
						}
					}
				}
			],
			"name": "select.query.sql"
		},
		"select_item_list": {
			"patterns": [
				{
					"begin": "\\A",
					"patterns": [{
						"include": "#select_item"
					}],
					"end": ",(.*)|\\z",

					"endCaptures": {
						"1": {
							"patterns": [
								{
									"include": "#select_item_list"
								}
							]
						},
						"2": {
							"patterns": [
								{
									"include": "#select_item_list"
								}
							]
						}
					}
				},
				{
					"name": "item.select.query.sql",
					"match": "(.+?)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#select_item"
								}
							]
						}
					}
				}
			]
		},
		"select_item": {
			"patterns": [
				{
					"match": "(?i:(\\w+)\\s+(as)\\s+(\\w+)\\s+)",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#expression"
								}
							]
						},
						"2": {
							"name": "keyword.other.sql"
						},
						"3": {
							"name": "entity.name.sql"
						}
					}
				},
				{
					"match": "(?i:(\\w+))",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#expression"
								}
							]
						}
					}
				}
			]
		},
		"expression": {
			"name": "entity.other.sql"
		},
		"comments": {
			"patterns": [
				{
					"begin": "(^[ \\t]+)?(?=--)",
					"end": "(?!\\G)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.sql"
						}
					},
					"patterns": [
						{
							"begin": "--",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.comment.sql"
								}
							},
							"end": "\\n",
							"name": "comment.line.double-dash.sql"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.sql",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.sql",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.sql",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.sql",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.sql",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.other.sql",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"name": "constant.character.escape.sql",
							"match": "\\\\."
						}
					]
				}
			]
		}
	},
	"scopeName": "source.bigquery"
}